<div class="container">
<h1>New Game</h1>
<ul>
<% @letters.each do |letter|%>
  <li><%= letter %></li>
<%end%>
</ul>
<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>

  <div class="form-group mr-2">
    <label class="mr-2">What is the longest word you cand find?</label>
    <input type="text" name="word" class="form-control" value="<%= params[:word] %>">
  </div>
  <button type="submit" class="btn btn-primary">play</button>
</form>
</div>
